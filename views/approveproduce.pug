extends tablelayout
block content
    nav#sidebarMenu.col-md-4.col-lg-2.d-md-block.bg-light.sidebar.collapse
        .nav_bar
            img.mobile_profile_image(src="/images/avatar.png", alt, style="margin-left: 20px; margin-top: 40px;")
            h5(style="margin-left: 25px; margin-top: 20px;") AgricOfficer
            i.fa.fa-bars.nav_btn
        .sidebar-sticky.pt-2
            ul.nav.flex-column
                li.nav-item
                    a.nav-link(href="http://localhost:3000/ufarmer")
                        span(data-feather="file")
                        | Register UrbanFarmer

                li.nav-item
                    a.nav-link(href="http://localhost:3000/producelistFO")
                        span(data-feather="file")
                        |Uploaded Produce
                
                li.nav-item
                    a.nav-link(href="http://localhost:3000/approvedproducelist")
                        span(data-feather="users")
                        |Approved Produce 
                li.nav-item
                    a.nav-link(href="#")
                        span(data-feather="users")
                        |Pending Produce
                li.nav-item
                    a.nav-link(href="http://localhost:3000/bookings")
                        span(data-feather="users")
                        | Bookings and Orders

                li.nav-item
                    a.nav-link(href="http://localhost:3000/ufarm")
                        span(data-feather="shopping-cart")
                        | Ufarm OnlineMarket

                li.nav-item
                    a.nav-link(href="#")
                        span(data-feather="bar-chart-2")
                        | Reports
    main.col-md-9.ml-sm-auto.col-lg-10.px-md-4(role="main")
        .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
            .container.mt-3
                header
                    h1.h2 Update Produce

                form(method="post" action="/approveproduce?id="+item._id)
                    table.table
                        thead.thead-dark
                                tr
                                    th ProductName
                                    td 
                                        input.form-control(value = item.pname name ="pname")
                                tr
                                    th WardName
                                    td 
                                        input.form-control(value = item.ward name ="ward") 
                                tr
                                    th DateofRegistration
                                    td 
                                        input.form-control(value = item.dateOfRegistration name ="dateOfRegistration")
                                tr
                                    th UnitPrice(UGX)
                                    td 
                                        input.form-control(value = item.price name ="price")
                                tr
                                    th ProductQuantity(kgs)
                                    td 
                                        input.form-control(value = item.pquantity name ="pquantity")
                                tr
                                    th Directions
                                    td 
                                        input.form-control(value = item.directions name ="directions")
                                tr
                                    th ModeOfPayment
                                    td 
                                        input.form-control(value = item.modeOfPayment name ="modeOfPayment")
                                tr
                                    th ModeOfDelivery
                                    td 
                                        input.form-control(value = item.modeOfDelivery name ="modeOfDelivery")
                                tr
                                    th ProduceType
                                    td 
                                        input.form-control(value = item.produceType name ="produceType")
                                tr
                                    th ProduceImage
                                    td 
                                        img(src="/uploads/"+ item.pImage height="100px", width="100px")
                                tr
                                    th ApprovedBy
                                    td 
                                        input.form-control( name ="approvee" type="text")
                                tr
                                    th Status
                                    td 
                                        input.form-control( valu=item.status name ="status" type="text")
                                        
                                        
                                tr 
                                    td(colspan="2")
                                        button.btn.btn-block.btn-success(type="submit") Approved


