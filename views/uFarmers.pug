.container.mt-3
    header.card-header(style="background-color: burlywood")
        h4.card-title Registered UrbanFarmers  
    form.search( action='/ufarmers')
        .form-row
            .form-group.col-md-6
                input.form-control(name='gender' placeholder="Enter your search term(gender) ...")
            .form-group.col-md-2
                input.btn.btn-dark.btn-block(type="submit")  
    .table-responsive
        table.content-table.table-bordered                      
            thead
                tr
                    th FirstName
                    th LastName
                    th DateofBirth
                    th DateofReg
                    th NationalIdNumber
                    th Contact
                    th WardName
                    th UfarmID
                    th Activities
                    th Gender
                    th Delete
                    th Update
                tbody
                        if users.length
                        each user in users
                            tr
                                td #{user.fname}
                                td #{user.lname}
                                td #{user.dob}
                                td #{user.dor}
                                td #{user.nin}
                                td #{user.phone}
                                td #{user.ward}
                                td #{user.ufid}
                                td #{user.acts}
                                td #{user.gender}
                                td
                                    form(method="post" action='/deleteufarmer')
                                        input(type="hidden", placeholder="", name="id", value=user._id)
                                        button.btn.btn-dark.btn-block(type="submit") Delete
                                td
                                    form(method="GET" action= '/updateufarmer/'+user._id)
                                        input(type="hidden", placeholder="", name="id", value=user._id)
                                        button.btn.btn-dark.btn-block(type="submit") Update
                        else
                            p No registrations yet :(  
