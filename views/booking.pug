style.
  
  .bd-placeholder-img {
          font-size: 1.125rem;
          text-anchor: middle;
          -webkit-user-select: none;
          -moz-user-select: none;
          -ms-user-select: none;
          user-select: none;
        }
  
        @media (min-width: 768px) {
          .bd-placeholder-img-lg {
            font-size: 3.5rem;
          }
        }
  
.container
  .py-5.text-center
    img.d-block.mx-auto.mb-4(src="/images/favicon.jpg", alt, width="72", height="72")
    h2 Order Details
  .row
    .col-md-4.order-md-2.mb-4
      h4.d-flex.justify-content-between.align-items-center.mb-3
        span.text-muted Your Order
      ul.list-group.mb-3
        li.list-group-item.d-flex.justify-content-between.lh-condensed
          div
            h6.my-0 Product name
            small.text-muted Brief description
          span.text-muted UGX 3000
        li.list-group-item.d-flex.justify-content-between.lh-condensed
          div
            h6.my-0 Second product
            small.text-muted Brief description
          span.text-muted UGX 4000
        li.list-group-item.d-flex.justify-content-between.lh-condensed
          div
            h6.my-0 Third item
            small.text-muted Brief description
          span.text-muted UGX 5000

        li.list-group-item.d-flex.justify-content-between
          span Total (USD)
          strong UGX 12000

    .col-md-8.order-md-1
      h4.mb-3 Billing address
      form.needs-validation(method="POST", action="/book", novalidate)
        .row
          .col-md-6.mb-3
            label(for="firstName") First name
            input.form-control#firstName(type="text", placeholder="Patricia", name="fname", required)
            .invalid-feedback.
             Valid first name is required.  
          .col-md-6.mb-3
            label(for="lastName") Last name
            input.form-control#lastName(type="text", placeholder="Nekesa", name="lname", required)
            .invalid-feedback Valid last name is required.
        .mb-3
          label(for="phone") Phonenumber
          .input-group
            input.form-control#phone(type="tel", placeholder="0706199333", name="phone", required)
            .invalid-feedback(style="width: 100%").
             Your phone number is required.              
        .mb-3
          label(for="email")
            |Email 
            span.text-muted (Optional)
          input.form-control#email(type="email", name="email", placeholder="you@example.com")
          .invalid-feedback.            
            |Please enter a valid email address for delivery updates.            
        .mb-3
          label(for="address") Delivery Address
          input.form-control#address(type="text", placeholder="Kireka", name="deliveryAddress", required)
          .invalid-feedback.            
           |Please enter your Delivery address. 
        .mb-3
          label(for="amount") Total Amount (UGX)
          input.form-control#amount(type="text", placeholder="Place total in order form", name="amount", required)
          .invalid-feedback.            
           |Please enter the right amount. 
        hr.mb-4
        h4.mb-3 Mode of Delivery
        .d-block.my-3
          .custom-control.custom-radio.my-2
            input#pickup.custom-control-input(name="deliveryMethod", type="radio", value="Pick up", checked, required)
            label.custom-control-label(for="pickup") Pick up
          .custom-control.custom-radio
            input#homedelivery.custom-control-input(name="deliveryMethod", type="radio", value="Home Delivery", required)
            label.custom-control-label(for="homedelivery") Home Delivery
        h4.mb-3 Mode of Payment
        .d-block.my-3
          .custom-control.custom-radio.my-2
            input#cash.custom-control-input(name="paymentMethod", type="radio", checked, value="Cash on Delivery", required)
            label.custom-control-label(for="cash") Cash on Delivery
          .custom-control.custom-radio
            input#mobilemoney.custom-control-input(name="paymentMethod", type="radio", value="Mobile Money", required)
            label.custom-control-label(for="mobilemoney") Mobile Money
        hr.mb-4
        button.btn.btn-primary.btn-lg.btn-block(type="submit").
          Continue to checkout
          
