extends tablelayout
block content
    nav#sidebarMenu.col-md-4.col-lg-2.d-md-block.bg-light.sidebar.collapse
      .nav_bar
        img.mobile_profile_image(src="/images/avatar.png", alt, style="margin-left: 20px; margin-top: 40px;")
        h5(style="margin-left: 25px; margin-top: 20px;") AgricOfficer
        i.fa.fa-bars.nav_btn
      .sidebar-sticky.pt-2
        ul.nav.flex-column
          li.nav-item
            a.nav-link(href="http://localhost:3000/farmerOne")
              span(data-feather="file")
              | Register FarmerOne

          li.nav-item
            a.nav-link(href="http://localhost:3000/farmerOnes")
              span(data-feather="users")
              | View FarmerOnes

          li.nav-item
            a.nav-link(href="http://localhost:3000/ufarm")
              span(data-feather="shopping-cart")
              | Ufarm OnlineMarket

          li.nav-item
            a.nav-link(href="#")
              span(data-feather="bar-chart-2")
              | Reports
    main.col-md-9.ml-sm-auto.col-lg-10.px-md-4(role="main")
        .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
            .container.mt-3
                header
                    h1.h2 Registered FarmerOnes
    
        .table-responsive
            table.content-table.table-bordered.bg-light
                thead
                    tr
                    th FullName
                    th DateOfBirth
                    th DateOfRegistration
                    th NationalIdNumber
                    th PhoneNumber
                    th FONumber
                    th ResidenceType
                    th WardName
                    th Activities
                    th HomeLocation
                    th PeriodofStay
                    th Gender
                    th UpdateDetails
                    th CreateAccount
                tbody
                    if users.length
                    each user in users
                        tr
                            td #{user.names}
                            td #{user.dob}
                            td #{user.dor}
                            td #{user.nin}
                            td #{user.phone}
                            td #{user.ufid}
                            td #{user.restype}
                            td #{user.ward}
                            td #{user.acts}
                            td #{user.home}
                            td #{user.stayperiod}
                            td #{user.gender}
                           
                            td
                                form(method="GET" action= '/update/'+user._id)
                                    input(type="hidden", placeholder="", name="id", value=user._id)
                                    button.btn.btn-sm.btn-success.btn-block(type="submit") Update
                            td
                                form(method="GET" action= '/signupfo/'+user._id)
                                    input(type="hidden", placeholder="", name="id", value=user._id)
                                    button.btn.btn-sm.btn-success(type="submit") CreateAccount
                    else
                        p No registrations yet :(

