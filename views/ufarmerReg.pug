meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
link(rel="stylesheet", href="/css/registration.css")
link(rel="shortcut icon" href="/images/favicon.jpg" type="image/x-icon")
title Urban Farmer Registration
.container
  .header
    h2 Urban Farmer Registration
  form.form#form(method="POST" action="/ufarmer" onSubmit='return checkInput()' autocomplete="off" name="ufform" )
    .form-row
      .form-group.col-md-6
        label(for="ufnames") Full Name
        input.form-control#ufnames(name="ufnames", type="text" placeholder="Patricia Nekesa")
        i.fas.fa-check-circle
        i.fas.fa-exclamation-circle
        small Error Message
    .form-row
      .form-group.col-md-6
        label(for="ufdob") Date Of Birth
        input.form-control#ufdob(name="ufdob", type="date")
        i.fas.fa-check-circle
        i.fas.fa-exclamation-circle
        small Error Message
      .form-group.col-md-6
        label(for="ufdor") Date of Registration
        input.form-control#ufdor(name="ufdor", type="date")
        i.fas.fa-check-circle
        i.fas.fa-exclamation-circle
        small Error Message
    .form-row
      .form-group.col-md-6
        label(for="ufnin") National Identification Number
        input.form-control#ufnin(name="ufnin", type="text" placeholder="CF5R9IK097890" )
        i.fas.fa-check-circle
        i.fas.fa-exclamation-circle
        small Error Message
      .form-group.col-md-6
        label(for="ufphone") Contact
        input.form-control#ufphone(name="ufphone", type="tel" placeholder="0706199333")
        i.fas.fa-check-circle
        i.fas.fa-exclamation-circle
        small Error Message
    .form-row
      .form-group.col-md-6
        label(for="ufward") Ward Name
        select#ufward.form-control(name="ufward")
          option(value="Select ward") Select Ward
          option(value="Ward 1") Ward 1
          option(value="Ward 2") Ward 2
          option(value="Ward 3") Ward 3
          option(value="Ward 4") Ward 4
        i.fas.fa-check-circle
        i.fas.fa-exclamation-circle
        small Error Message
      .form-group.col-md-6
        label(for="ufid") Ufarmer Number
        input.form-control#ufid(name="ufid", type="text", placeholder="UF001")
        i.fas.fa-check-circle
        i.fas.fa-exclamation-circle
        small Error Message
    .form-group
      label(for="ufacts") Farming Activities
      select#ufacts.form-group(name="ufacts" type="text" placeholder="Select Activities")
        option(value="Select Farming Activities") Select Farming Activities
        option(value="Horticulture") Horticulture
        option(value="Poultry") Poultry
        option(value="Dairy") Dairy
      i.fas.fa-check-circle
      i.fas.fa-exclamation-circle
      small Error Message
    fieldset(style='margin-bottom:10px;')
      legend Gender
      .form-check(style='padding:3px;')
        input.form-check-input#gender1(type="radio", name="gender", value="Female", checked)
        label.form-check-label(for="gender1" style='padding: 3px;')
        |Female   
      .form-check(style='padding: 3px;')
        input.form-check-input#gender2(type="radio", name="gender", value="Male")
        label.form-check-label(for="gender2" style='padding: 3px;')
        |Male 
    button(type='submit') Register 

script(src="/js/validateUF.js")
