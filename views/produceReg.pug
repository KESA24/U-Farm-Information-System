meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
link(rel="stylesheet", href="/css/bootstrap_css/bootstrap.css")
link(rel="icon" href="images/favicon.jpg")
link(rel="stylesheet", href="/css/registration.css")
title Produce Registration
.container
  .header
    h2 Produce Registration
  form.form#form(method="POST" action="/uproduce" enctype="multipart/form-data")
    .form-row
      .form-group.col-md-6
        label(for="pname") Name of Produce
        input#fname(name="pname", type="text")
      .form-group.col-md-6
        label(for="Ward") Ward Name
        select#ward(name="ward")
          option(value="Ward 1") Ward 1
          option(value="Ward 2") Ward 2
          option(value="Ward 3") Ward 3
          option(value="Ward 4") Ward 4
    .form-row
      .form-group.col-md-6
        label(for="dob") Date Of Registration
        input#dob(name="dateOfRegistration", type="date")
      .form-group.col-md-6
        label(for="price") Unit Price(UGX)
        input#dor(name="price", type="number")
    .form-row
      .form-group.col-md-6
        label(for="qty") Quantity
        input#pquantity(name="pquantity", type="number")
      .form-group.col-md-6
        label(for="ufid") Directions
        input#dir(name="directions", type="text", placeholder="Directions to farm")
    .form-row
      .form-group.col-md-6
        label(for="modeOfPayment") Mode of Payment
        select#mop(name="modeOfPayment")
          option(value="Cash") Cash
          option(value="Mobile Money") Mobile Money
      .form-group.col-md-6
        label(for="phone") Mode of Delivery
        select#mod(name="modeOfDelivery")
          option(value="Pickup") Pickup
          option(value="Home Delivery") Home Delivery
    .form-row
      .form-group.col-md-6
        label(for="acts") Produce Type
        select#ptype(name="produceType")
          option(value="Organic") Organic
          option(value="Non Organic") Non Organic
      .form-group.col-md-6
        label(for="image") Upload Picture
        input.file#image(name="pImage", type="file")
      button.btn.btn-warning(style="width: 100%;", type="submit") Register
    .form-row
      .form-group.col-md-6
        label(for="status") 
        input#status(name="status", type="text" value="Pending"  hidden )
      .form-group.col-md-6
        label(for="status") 
        input#approvee(name="approvee", type="text" value="UFWardFO"  hidden )
    .form-row
      .form-group.col-md-12
        label(for="availability") 
        input#avail(name="availability", type="String" value="Available" hidden)

script(src="/js/jquery-3.5.1.slim.min.js")
script(src="/js/popper.min.js")
script(src="/js/bootstrap_js/bootstrap.js")