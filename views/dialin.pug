.container
  .py-3.text-center
    img.d-block.mx-auto.mb-2(src="/images/favicon.jpg", alt, width="50", height="50")
    h2 Booking Details
  .row(style="margin-left: 150px;")
      form.needs-validation(method="POST", action="/dialin?"+ item_id, )
        .form-row
          .form-group.col-md-6.mb-3
            input.form-control#pname(type="text", placeholder="First Name", name="pname", value=item.pname required)
          .form-group.col-md-6.mb-3
            //- label(for="lastName") Last name
            input.form-control#lastName(type="text", placeholder="Last Name", name="lname", required)
            .invalid-feedback Valid last name is required.
        .form-row
          .form-group.col-md-6.mb-3
            //- label(for="phone") Phonenumber
            .input-group
              input.form-control#phone(type="tel", placeholder="Phonenumber", name="phone", required)
              .invalid-feedback(style="width: 100%").
                Your phone number is required.              
          .form-group.col-md-6.mb-3
            //- label(for="email")
              |Email 
              span.text-muted (Optional)
            input.form-control#email(type="email", name="email", placeholder="Email")
            .invalid-feedback.            
              |Please enter a valid email address for delivery updates.  
        .form-row          
          .form-group.col-md-6.mb-3
            //- label(for="address") Delivery Address
            input.form-control#address(type="text", placeholder="Delivery Address", name="deliveryAddress", required)
            .invalid-feedback.            
              |Please enter your Delivery address. 
          .form-group.col-md-6.mb-3
            //- label(for="amount") Produce Name
            input.form-control#pname(type="text", placeholder="Produce Name", name="pname", required)
            .invalid-feedback.            
              |Please enter the right amount. 
        .form-row
            .form-group.col-md-6.mb-3
              //- label(for="amount") Quantity (kg)
              input.form-control#qty(type="text", placeholder="Quantity needed", name="qty", required)
              .invalid-feedback.            
                |Please enter the right amount. 
            .form-group.col-md-6.mb-3
              //- label(for="amount") Total Cost(UGX)
              input.form-control#amount(type="text", placeholder="Total Price", name="amount", required)
              .invalid-feedback.            
                |Please enter the right amount. 
        hr.mb-4
        .form-row
          .form-group.col-md-6
            h4.mb-3 Mode of Delivery
            .d-block.my-3
              .custom-control.custom-radio.my-2
                input#pickup.custom-control-input(name="deliveryMethod", type="radio", value="Pick up", checked, required)
                label.custom-control-label(for="pickup") Pick up
              .custom-control.custom-radio
                input#homedelivery.custom-control-input(name="deliveryMethod", type="radio", value="Home Delivery", required)
                label.custom-control-label(for="homedelivery") Home Delivery
          .form-group.col-md-6
            h4.mb-3 Mode of Payment
            .d-block.my-3
              .custom-control.custom-radio.my-2
                input#cash.custom-control-input(name="paymentMethod", type="radio", checked, value="Cash on Delivery", required)
                label.custom-control-label(for="cash") Cash on Delivery
              .custom-control.custom-radio
                input#mobilemoney.custom-control-input(name="paymentMethod", type="radio", value="Mobile Money", required)
                label.custom-control-label(for="mobilemoney") Mobile Money
          hr.mb-4
          button.btn.btn-success.btn-lg.btn-block(type="submit").
            Continue to checkout
          
